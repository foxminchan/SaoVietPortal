{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Otlp": {
    "ServiceName": "Proxy",
    "Endpoint": "http://localhost:4317"
  },
  "ReverseProxy": {
    "Routes": {
      "branchApiRoute": {
        "ClusterId": "branchApi",
        "AuthorizationPolicy": [
          "Accountant",
          "Admin",
          "Branch Manager",
          "Developer"
        ],
        "Match": {
          "Path": "branch-api/{**remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/branch-api" },
          { "PathPrefix": "/" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "courseApiRoute": {
        "ClusterId": "courseApi",
        "Match": {
          "Path": "course-api/{**remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/course-api" },
          { "PathPrefix": "/" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "educationApiRoute": {
        "ClusterId": "educationApiRoute",
        "Match": {
          "Path": "education-api/{**remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/education-api" },
          { "PathPrefix": "/" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "staffApiRoute": {
        "ClusterId": "staffApiRoute",
        "Match": {
          "Path": "staff-api/{**remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/staff-api" },
          { "PathPrefix": "/" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "studentApiRoute": {
        "ClusterId": "studentApiRoute",
        "Match": {
          "Path": "student-api/{**remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/student-api" },
          { "PathPrefix": "/" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "userApiRoute": {
        "ClusterId": "userApiRoute",
        "Match": {
          "Path": "userApi/{**remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/userApi" },
          { "PathPrefix": "/" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      }
    },
    "Clusters": {
      "branchApiCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:6001"
          }
        }
      },
      "courseApiCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:6002"
          }
        }
      },
      "educationApiCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:6003"
          }
        }
      },
      "staffApiCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:6004"
          }
        }
      },
      "studentApiCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:6005"
          }
        }
      },
      "userApiCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:6006"
          }
        }
      }
    }
  }
}